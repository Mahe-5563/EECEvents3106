<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/vulcanslog"
    tools:context="com.example.mahe.eecevents3106.NavActivities.VulcanEventsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vulcan_events"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/vulcanEventHeading"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/vulcanEventHeading"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:id="@+id/VIEWVUL"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/VIEWVUL"
        android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>

                <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/cardVULCAN"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="330dp"
                            android:layout_height="250dp"
                            android:id="@+id/IMGVULVULCAN"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitCenter"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/IMGVULVULCAN"
                            android:text="@string/vulcan_events"
                            android:textSize="25sp"
                            android:layout_centerHorizontal="true"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAllCaps="true"
                            android:id="@+id/textVULCAN"
                            android:fontFamily="serif"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textVULCAN"
                            android:textSize="20sp"
                            android:layout_centerHorizontal="true"
                            android:textStyle="bold"
                            android:text="@string/swagat_even_description_comes_down_here"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="sans-serif-condensed"
                            android:id="@+id/textVULCANDesc"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_menu_share"
                            android:layout_below="@id/textVULCANDesc"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/shareVULCAN"
                            android:layout_marginStart="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textVULCANDesc"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/share"
                            android:layout_toRightOf="@id/shareVULCAN"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:id="@+id/VULCANGoTo"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="40dp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_toEndOf="@id/shareVULCAN" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textVULCANDesc"
                            android:layout_toRightOf="@id/VULCANGoTo"
                            android:text="@string/date"
                            android:textSize="20sp"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/VULCANGoTo"
                            android:id="@+id/dateYVULCAN"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-condensed"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dateXVULCAN"
                            android:layout_toRightOf="@id/dateYVULCAN"
                            android:layout_below="@id/textVULCANDesc"
                            android:layout_marginTop="10dp"
                            android:text="@string/_28_09_1997"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_toEndOf="@id/dateYVULCAN"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-condensed"/>

                        <Spinner
                            android:layout_width="160sp"
                            android:layout_height="35sp"
                            android:layout_below="@id/dateXVULCAN"
                            android:layout_marginBottom="10sp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/vulINVITELog"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/vulINVITELog"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="10dp"
                            android:textColor="#D50000"
                            android:textSize="13sp"
                            android:id="@+id/tvPeopAttendVul"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardVULCAN"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_next_eve_vul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="NO UPCOMING EVENTS"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-smallcaps"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_below="@id/tv_next_eve_vul"
                            android:background="@color/colorPrimaryDark"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/v_upeve_vul"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v_upeve_vul"
                            android:text="@string/date"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#000"
                            android:id="@+id/dat_upeve_vul"
                            android:textStyle="bold"
                            android:fontFamily="monospace"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/dat_upeve_vul"
                            android:layout_below="@id/v_upeve_vul"
                            android:layout_marginTop="10dp"
                            android:text="@string/n_a"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_toEndOf="@id/dat_upeve_vul"
                            android:id="@+id/date_upev_vul"
                            android:fontFamily="monospace"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_below="@id/date_upev_vul"
                            android:background="@color/colorPrimaryDark"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/v2_upeve_vul"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v2_upeve_vul"
                            android:id="@+id/tv_next_eve_desc_vul"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginRight="20dp"
                            android:text="No Description found"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-condensed"/>


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

    </ScrollView>

</RelativeLayout>
