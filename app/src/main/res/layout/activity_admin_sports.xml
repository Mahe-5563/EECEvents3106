<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relLLAY"
    tools:context="com.example.mahe.eecevents3106.AdminActivity">

         <TextView
            android:id="@+id/textAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/administrator_column"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/ViEwIMAGE"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/textAdmin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#000" />


        <TextView
            android:id="@+id/DeptSport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViEwIMAGE"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80sp"
            android:layout_marginTop="25dp"
            android:text="@string/department_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LayEDITTEXTS"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/DeptSport"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editEventNameSport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="7dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="@string/event_name"
                        android:inputType="textCapWords" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/dateSelectSport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="7dp"
                        android:focusable="false"
                        android:hint="@string/date"
                        tools:ignore="TextFields" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/BtnAddEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LayEDITTEXTS"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10dp"
            android:background="#D50000"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/add_event"
            android:textColor="#fff"
            android:textStyle="bold" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnAddEvents"
        android:id="@+id/editSportInvitation"
        android:layout_margin="20dp"
        android:hint="@string/enter_your_invitation_text"
        tools:ignore="TextFields"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mandatory_fields"
        android:layout_below="@id/editSportInvitation"
        android:id="@+id/tvMand"
        android:layout_margin="10dp"
        android:textColor="#D50000"
        android:fontFamily="sans-serif-condensed"/>


    <Button
            android:id="@+id/BTNeventPostSport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10sp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/post_the_event"
            android:textColor="#fff"
            android:textStyle="bold" />


</RelativeLayout>
